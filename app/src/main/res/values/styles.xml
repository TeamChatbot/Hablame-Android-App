<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="android:Theme.DeviceDefault">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="SpeechBubble" parent="NormalText">
        <item name="android:maxLines">6</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="NormalText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NormalTextExtended" parent="NormalText">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
