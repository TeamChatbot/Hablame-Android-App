<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.morpheus.chatbot.chatbotapp.MainActivity" >

    <ToggleButton
        android:id="@+id/turnRecognitionOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/turnRecognitionOnOff" />

    <ProgressBar
        android:id="@+id/speechInputLevel"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/turnRecognitionOnOff"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/speechOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speechInputLevel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/speechOutput" />

    <TextView
        android:id="@+id/chatbotAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speechOutput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/chatbotAnswer" />

    <Switch
        android:id="@+id/listeningForName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:onClick="onListeningForName"
        android:text="@string/listeningForName" />

</RelativeLayout>
